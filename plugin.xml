<idea-plugin>
	<id>org.antlr.jetbrains.eo</id>
	<name>EO</name>
	<version>0.1</version>
	<vendor email="stepa.strunkov@gmail.com">EO developing</vendor>

	<description><![CDATA[
  	Simple plugin for EO language with syntax highlighter
    ]]></description>

	<change-notes><![CDATA[

]]>
	</change-notes>

	<!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
	<idea-version since-build="182"/> <!-- requires 13.x, 14.x, 15.x -->

	<!-- please see http://confluence.jetbrains.net/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
		 on how to target different products -->
	<!-- uncomment to enable plugin in all products -->
	<depends>com.intellij.modules.lang</depends>

	<application-components>
	</application-components>

	<project-components>
		<component>
			<implementation-class>org.antlr.jetbrains.eo.EOPluginController</implementation-class>
		</component>
	</project-components>

	<actions>
	</actions>
	<extensions defaultExtensionNs="com.intellij">
		<fileTypeFactory implementation="org.antlr.jetbrains.eo.EOFileTypeFactory"/>
		<lang.syntaxHighlighterFactory language='EO' implementationClass="org.antlr.jetbrains.eo.EOSyntaxHighlighterFactory"/>

		<lang.parserDefinition language="EO" implementationClass="org.antlr.jetbrains.eo.EOParserDefinition"/>

		<lang.psiStructureViewFactory language="EO" implementationClass="org.antlr.jetbrains.eo.structview.EOStructureViewFactory"/>

		<colorSettingsPage implementation="org.antlr.jetbrains.eo.EOColorSettingsPage"/>

		<externalAnnotator language="EO" implementationClass="org.antlr.jetbrains.eo.EOExternalAnnotator"/>

		<lang.findUsagesProvider language="EO" implementationClass="org.antlr.jetbrains.eo.EOFindUsagesProvider"/>

		<completion.contributor
				language="EO"
				implementationClass="org.antlr.jetbrains.eo.EOCompletionContributor"/>
	</extensions>
</idea-plugin>
